@model WebAttendance.Models.ViewModels.SemesterViewModel

<h1>Редакция на семестър </h1>

<div asp-validation-summary="All">   </div>
<form method="post" asp-controller="Semester" asp-action="EditSemester">
    <input type="hidden" asp-for="@Model.Semester.Id" />
    <div class="border p-3">
        <div class="form-group row">
            <h2>Моля редактирайте</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="@Model.Semester.Name"></label>
                        <input asp-for="@Model.Semester.Name" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Semester.startDate"></label>
                        <input id="datepicker7" asp-for="@Model.Semester.startDate" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Semester.endDate"></label>
                        <input id="datepicker8" asp-for="@Model.Semester.endDate" class="form-control" />
                    </div>
                    <p> </p>
                    <div class="form-group row">
                        <div class="col-2">
                            <input type="submit" class="btn btn-info w-75" value="Обнови" />
                        </div>
                        <div class="col-2">
                            <a asp-action="Index" class="btn btn-danger w-75">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script>
        $('input[type="datetime-local"]').attr('type', 'text');

        $(function () {
            $("#datepicker7").datepicker();
        });

        $(function () {
            $("#datepicker8").datepicker();
        });
    </script>
}