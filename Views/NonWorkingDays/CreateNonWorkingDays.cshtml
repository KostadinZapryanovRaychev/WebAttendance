@model WebAttendance.Models.ViewModels.NonWorkingDaysViewModel
<h1>Неучебен ден</h1>

<div asp-validation-summary="All">   </div>
<form method="post" asp-controller="NonWorkingDays" asp-action="CreateNonWorkingDays">
    <div class="border p-3">
        <div class="form-group row">
            <h2>Въведете неучебен ден</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.NonWorkingDays.Holiday"></label>
                        <input id="datepicker3" asp-for="@Model.NonWorkingDays.Holiday" class="form-control" />
                    </div>
                    <p> </p>
                    <div class="form-group row">
                        <div class="col-2">
                            <input type="submit" class="btn btn-info w-75" value="Запис" />
                        </div>
                        <div class="col-2">
                            <a asp-action="Index" class="btn btn-danger w-75">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script>
        $('input[type="datetime-local"]').attr('type', 'text');

        $(function () {
            $("#datepicker3").datepicker();
        });
    </script>

}