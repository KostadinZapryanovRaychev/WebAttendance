@model List<WebAttendance.Models.ViewModels.UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;
}

<form method="post">


    <div class="card">
        <div class="card-header">
            <h3>Сложи или премахни потребител в тази роля</h3>
        </div>
        <div class="card-body">
            @for( int i = 0; i <Model.Count; i ++)
            {
            <div class="form-check m-1">
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <input type="hidden" asp-for="@Model[i].UserName"  />
                <input type="hidden" asp-for="@Model[i].UserId"  />
                
                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input value="Обнови" type="submit" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId"  class="btn btn-primary" style="width:auto" > Назад</a>
        </div>
    </div>

</form>
